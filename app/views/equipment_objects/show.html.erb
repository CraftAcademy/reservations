<% title "Equipment Item for #{@equipment_object.equipment_model.name}" %>

<p>
  <strong>Name:</strong>
  <%= @equipment_object.name %>
</p>
<% unless @equipment_object.serial.nil? or @equipment_object.serial == "" %>
  <p>
    <strong>Serial:</strong>
    <%= @equipment_object.serial %>
  </p>
<% end %>
<p>
  <strong>Equipment Model:</strong>
  <%= link_to @equipment_object.equipment_model.name, @equipment_object.equipment_model %>
</p>
<p>
  <strong>Status:</strong>
  <%= @equipment_object.status %>
</p>

<%# NOTES %>
<div class="row">
  <% unless @equipment_object.notes.blank? %>
      <div class="span7">
        <hr>
        <h3>Notes</h3>
        <div class='notes-container'><%= markdown(@equipment_object.notes) %></div>
      </div>
  <% end %>
  <div class="span5">
    <hr>
    <h3>Add new notes</h3>
    
    <%= simple_form_for @equipment_object, :url => add_notes_to_eq_object_path, 
    :method => :put do |f| %>
      <%= f.error_notification %>

      <div class='notes-container'><%= text_area_tag :new_notes, "", rows: 5, class: 'span4' %></div>
      <%= f.submit 'Add note', class: 'btn' %>
    <% end %>
  </div>
</div>

<div class="form-actions">
  <%= link_to "Edit", edit_equipment_object_path(@equipment_object), class: 'btn' %>
  <%= equipment_object.make_deactivate_btn %>
  <%= link_to "View All", equipment_objects_path, class: 'btn' %>
</div>
